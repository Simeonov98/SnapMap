        <div class="card bg-light mt-1">
            <form action="{{ path('app_upload_uploaded') }}" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-form-label col-sm-10 text-center">
                            <label for="fileUpload">Моля качи .gpx файла си тук:</label>
                                <input type="file" class="form-control-file text-center m-1" id="fileUpload" name="coords">
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12 text-center" style="padding-bottom: 10px">
